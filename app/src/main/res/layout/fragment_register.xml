<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Activity.Fragments.Register">


  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ScrollView
      android:id="@+id/scrollBar"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_marginBottom="60dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintTop_toTopOf="parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <TextView
          android:id="@+id/txt_name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="10dp"
          android:text="Name:"
          android:textColor="@color/black"
          android:textSize="21sp"
          app:layout_constraintBottom_toTopOf="@+id/edt_name" />

        <EditText
          android:id="@+id/edt_name"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="10dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Name..."
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@id/txt_name" />

        <TextView
          android:id="@+id/txt_surname"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Surname:"
          android:textColor="@color/black"
          android:textSize="21sp"
          app:layout_constraintBottom_toTopOf="@+id/edt_surname"
          app:layout_constraintTop_toBottomOf="@+id/edt_name" />

        <EditText
          android:id="@+id/edt_surname"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="10dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Surname..."
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/txt_surname" />

        <TextView
          android:id="@+id/txt_phone"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Phone number:"
          android:textColor="@color/black"
          android:textSize="21sp"
          app:layout_constraintBottom_toTopOf="@+id/edt_phone"
          app:layout_constraintTop_toBottomOf="@+id/edt_surname" />

        <EditText
          android:id="@+id/edt_phone"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="10dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Phone no..."
          android:inputType="phone"
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/txt_phone" />

        <TextView
          android:id="@+id/txt_email"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Email:"
          android:textColor="@color/black"
          android:textSize="21sp"
          app:layout_constraintBottom_toTopOf="@+id/edt_email"
          app:layout_constraintTop_toBottomOf="@+id/edt_phone" />

        <EditText
          android:id="@+id/edt_email"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="10dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Email address..."
          android:inputType="textEmailAddress"
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/txt_email" />

        <TextView
          android:id="@+id/txt_address"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Address:"
          android:textColor="@color/black"
          android:textSize="21sp"
          app:layout_constraintBottom_toTopOf="@+id/edt_address"
          app:layout_constraintTop_toBottomOf="@+id/edt_email" />

        <EditText
          android:id="@+id/edt_address"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="10dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Address..."
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/txt_address" />

        <TextView
          android:id="@+id/txt_pass"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Password:"
          android:textColor="@color/black"
          android:textSize="21sp"
          app:layout_constraintBottom_toTopOf="@+id/edt_pass"
          app:layout_constraintTop_toBottomOf="@+id/edt_address" />

        <EditText
          android:id="@+id/edt_pass"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="10dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Enter a password..."
          android:inputType="textPassword"
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/txt_pass" />

        <ImageView
          android:id="@+id/img_okPass"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginRight="10dp"
          android:src="@drawable/ic_baseline_check_circle_outline_24"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="@+id/edt_pass"
          app:layout_constraintEnd_toEndOf="@+id/edt_pass"
          app:layout_constraintTop_toTopOf="@+id/edt_pass"
          tools:ignore="MissingConstraints" />

        <TextView
          android:id="@+id/txt_okPass"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Password must contain at least 6characters!"
          android:textColor="#5B5BDD"
          android:visibility="gone"
          app:layout_constraintTop_toBottomOf="@+id/edt_pass" />

        <TextView
          android:id="@+id/txt_passRepeat"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:layout_marginBottom="10dp"
          android:text="Repeat the password:"
          android:textColor="@color/black"
          android:textSize="21sp"
          app:layout_constraintBottom_toTopOf="@+id/edt_passRepeat"
          app:layout_constraintTop_toBottomOf="@+id/txt_okPass" />

        <EditText
          android:id="@+id/edt_passRepeat"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="10dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Repeat you password..."
          android:inputType="textPassword"
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/txt_passRepeat" />

        <ImageView
          android:id="@+id/img_okPassRepeat"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginRight="10dp"
          android:src="@drawable/ic_baseline_check_circle_outline_24"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="@+id/edt_passRepeat"
          app:layout_constraintEnd_toEndOf="@+id/edt_passRepeat"
          app:layout_constraintTop_toTopOf="@+id/edt_passRepeat"
          tools:ignore="MissingConstraints" />


        <Button
          android:id="@+id/btn_register"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginTop="40dp"
          android:layout_marginBottom="80dp"
          android:background="@drawable/btn_round"
          android:text="Register"
          android:textAllCaps="false"
          android:textColor="#ffffff"
          android:textSize="17sp"
          app:layout_constraintTop_toBottomOf="@+id/edt_passRepeat"
          app:layout_constraintBottom_toBottomOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>