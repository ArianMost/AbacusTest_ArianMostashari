<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Activity.Fragments.Register">


  <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <ScrollView
      android:id="@+id/scrollBar"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical">


        <EditText
          android:id="@+id/edt_name"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Name..."
          android:paddingLeft="15dp"
          android:layout_marginTop="40dp"
          app:layout_constraintTop_toTopOf="parent"
          />

        <EditText
          android:id="@+id/edt_surname"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="20dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Surname..."
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/edt_name"
          />

        <EditText
          android:id="@+id/edt_phone"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="20dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Phone no..."
          android:inputType="phone"
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/edt_surname"
          />

        <EditText
          android:id="@+id/edt_email"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="20dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Email address..."
          android:inputType="textEmailAddress"
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/edt_phone" />

        <EditText
          android:id="@+id/edt_address"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="20dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:ems="10"
          android:hint="Address..."
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/edt_email"
          />

        <EditText
          android:id="@+id/edt_pass"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="20dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:inputType="textPassword"
          android:ems="10"
          android:hint="Enter a password..."
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/edt_address" />

        <EditText
          android:id="@+id/edt_passRepeat"
          android:layout_width="match_parent"
          android:layout_height="45dp"
          android:layout_marginTop="20dp"
          android:alpha="0.5"
          android:background="@drawable/edt_round"
          android:inputType="textPassword"
          android:ems="10"
          android:hint="Repeat you password..."
          android:paddingLeft="15dp"
          app:layout_constraintTop_toBottomOf="@+id/edt_pass"
          />

        <ImageView
          android:id="@+id/img_okPass"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_marginRight="10dp"
          android:src="@drawable/ic_baseline_check_circle_outline_24"
          app:layout_constraintBottom_toBottomOf="@+id/edt_passRepeat"
          app:layout_constraintEnd_toEndOf="@+id/edt_passRepeat"
          app:layout_constraintTop_toTopOf="@+id/edt_passRepeat"
          tools:ignore="MissingConstraints"
          android:visibility="gone"/>



        <Button
          android:id="@+id/btn_register"
          android:layout_width="match_parent"
          android:layout_height="60dp"
          android:layout_marginTop="50dp"
          android:background="@drawable/btn_round"
          android:text="Register"
          android:textAllCaps="false"
          android:textSize="17sp"
          android:textColor="#ffffff"
          app:layout_constraintTop_toBottomOf="@+id/edt_passRepeat" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
  </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>